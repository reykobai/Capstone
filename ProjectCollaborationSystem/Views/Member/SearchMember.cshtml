@model IEnumerable<ProjectCollaborationSystem.Models.Information>


@{
    ViewBag.Title = "Index";
}
@using (Html.BeginForm("SearchMember", "Member", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    {


        <!--END TITLE & BREADCRUMB PAGE-->
        <!--BEGIN CONTENT-->


        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search Member" name="searchMember" />
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </div>
        </div>

        <br />
        <div class="panel panel-orange">
            <div class="panel-heading">Members</div>
            <div class="panel-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Specialty</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @item.FirstName @item.LastName</td>
                                <td><a href="https://mail.google.com/mail/?view=cm&fs=1&to=@item.EmailAddress" target="_blank"> @item.EmailAddress</a></td>
                                <td> @item.Specialty</td>

                                <td>@Html.ActionLink("View Information", "Index", "Profile", new { id = @item.InformationID }, null)</td>



                            </tr>
                        }
                    </tbody>
                </table>


            </div>
        </div>


    }
}