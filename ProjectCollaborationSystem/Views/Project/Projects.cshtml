@model ProjectCollaborationSystem.Models.Task_information
@{
    ViewBag.Title = "Projects";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    {

 <div class="col-lg-12">
                <div class="col-md-12">
                    <div id="area-chart-spline" style="width: 100%; height: 300px; display: none;">
                    </div>
                </div>
            </div>
        <div id="title-breadcrumb-option-demo" class="page-title-breadcrumb">
            <div class="page-header pull-left">
                <div class="page-title">
                   Projects
                </div>
            </div>
          
            <div class="clearfix">
            </div>
        </div>
        <div class="page-content">

            @**@


            <div class="tabbable">

                <div class="panel panel-orange">
            
                  
                    <ul class="nav nav-tabs panel-heading" style="font-size:12px;">
                        <li class="active"><a href="#one" data-toggle="tab"><img src="~/Images/delayProject.png" style="height:20px;width:20px;" /> Delayed Projects</a></li>
                        <li><a href="#two" data-toggle="tab"><img src="~/Images/pending.ico" style="height:20px;width:20px;" /> Pending Projects</a></li>
                        <li><a href="#three" data-toggle="tab"><img src="~/Images/currentProjs.ico" style="height:20px;width:20px;" /> Current Projects</a></li>

                    </ul>
                    <div class="panel-body">

                        <div class="tab-content">
                            <div class="tab-pane active" id="one">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>

                                            <th>Title</th>
                                            <th>Date Added</th>
                                            <th>Due Date</th>
                                            <th>Status</th>
                                            <th>Priority</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.projec)
                                        {

                                            <tr>

                                                <td> @item.ProjectTitle </td>
                                                <td> @item.DateAdded </td>
                                                <td> @item.DueDate </td>
                                                <td> @item.ProjectStatus </td>
                                                <td> @item.ProjectPriority </td>
                                                <td>@Html.ActionLink("Open", "DisplayProjet", "Project", new { id = @item.ProjectID }, null)</td>



                                            </tr>


                                        }

                                    </tbody>
                                </table>
                                <hr />
                                <p style="float:right;">  @Html.ActionLink("View All Delayed Projects", "DelayedProject", "Project")</p>
                            </div>
                            @*Pending*@

                            <div class="tab-pane" id="two">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>

                                            <th>Title</th>
                                            <th>Date Added</th>
                                            <th>Due Date</th>
                                            <th>Status</th>
                                            <th>Priority</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model.proj)
                                        {

                                            <tr>

                                                <td> @item.ProjectTitle </td>
                                                <td> @item.DateAdded </td>
                                                <td> @item.DueDate </td>
                                                <td> @item.ProjectStatus </td>
                                                <td> @item.ProjectPriority </td>
                                                <td>@Html.ActionLink("Open", "DisplayProjet", "Project", new { id = @item.ProjectID }, null)</td>



                                            </tr>

                                        }

                                    </tbody>
                                </table>
                                <hr />
                                <p style="float:right;">  @Html.ActionLink("View All Pending Projects", "PendingProject", "Project")</p>
                            </div>

                            @*Current*@
                            <div class="tab-pane" id="three">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                      
                                            <th>Title</th>
                                            <th>Date Added</th>
                                            <th>Due Date</th>
                                            <th>Status</th>
                                            <th>Priority</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.proje)
                                        {
                                            <tr>

                                                <td> @item.ProjectTitle </td>
                                                <td> @item.DateAdded </td>
                                                <td> @item.DueDate </td>
                                                <td> @item.ProjectStatus </td>
                                                <td> @item.ProjectPriority </td>
                                                <td>@Html.ActionLink("Open", "DisplayProjet", "Project", new { id = @item.ProjectID }, null)</td>



                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <hr />
