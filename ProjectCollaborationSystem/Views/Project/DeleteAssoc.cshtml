@model ProjectCollaborationSystem.Models.Task_information
           @{
    ViewBag.Title = "Edit Project";
}

@using (Html.BeginForm("EditProject", "Project", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    {
        <div class="page-content">
            <div id="tab-general">
                <div class="row mbl">
                    <div class="col-lg-12">
                        <div class="col-md-12">
                            <div id="area-chart-spline" style="width: 100%; height: 300px; display: none;">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="row">

                            <div class="col-lg-9">

                                <div class="panel panel-orange">
                                    <div class="panel-heading">
                                        Confirmation
                                    </div>
                                    <br />
                                    <div class="panel-body pan">
                                        
                                       &nbsp; Ooops!! You can't delete <a href="@Url.Action("Index", "Profile", new { id = @Model.info.InformationID }, null)">@Model.info.FirstName @Model.info.LastName </a>.  He is assigned to a task/subtask. :)

                                        <br />
                                        <br />

                                        <b><p> &nbsp;Task(s)</p></b>

                                       @*Task*@
                                       <table class="table table-hover " >
                                            <thead>
                                                <tr>
                                             
                                                    <th>Title</th>
                                                    <th>Date Added</th>
                                                    <th>Due Date</th>
                                                    <th>Status</th>
                                                    <th>Priority</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.task)
                                                {
                                                    <tr>
                                                        <td> @item.TaskTitle </td>
                                                        <td> @item.DateAdded </td>
                                                        <td> @item.DueDate </td>
                                                        <td> @item.TaskStatus </td>
                                                        <td> @item.TaskPriority </td>
                                                     
                                                        <td>
                                                            @Html.ActionLink("Open", "DisplayTask", "Task", new { id = @item.TaskID }, null)
                                                        
                                                    </td>



                                                </tr>
                                                }
                                            </tbody>
                                        </table>


                                        @*EndTask*@
                                        <b><p>&nbsp; Subtask(s)</p></b>
                                        <table class="table table-hover ">
                                            <thead>
                                                <tr>

                                                    <th>Title</th>
                                                    <th>Date Added</th>
                                                    <th>Due Date</th>
                                                    <th>Status</th>
                                                    <th>Priority</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.subtask)
                                                {
                                                    <tr>
                                                        <td> @item.SubtaskTitle </td>
                                                        <td> @item.DateAdded </td>
                                                        <td> @item.DueDate </td>
                                                        <td> @item.SubtaskStatus </td>
                                                        <td> @item.SubtaskPriority </td>

                                                        <td>
                                                            @Html.ActionLink("Open", "DisplaySubtask", "Subtask", new { id = @item.SubtaskID }, null)

                                                        </td>



                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                    <br />
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>





    }
}