@model ProjectCollaborationSystem.Models.Information


@{
    ViewBag.Title = "Index";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    {

<!--END TITLE & BREADCRUMB PAGE-->
<!--BEGIN CONTENT-->
 <div class="panel panel-orange" style="width:500px;">
                <div class="panel-heading"> <i class="fa fa-user"></i> @Model.FirstName @Model.LastName</div>
                <div class="panel-body">


                    <div class="row mtl">
                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="text-center mbl"><img src="~/Files/koala.jpg" alt="" class="img-circle" style="width: 100px; height: 100px;background-color:red;" /></div>

                            </div>
                            <table class="table table-striped table-hover">
                                <tbody>
                                    <tr>
                                        <td>User Name</td>
                                        <td>@Model.Username</td>
                                    </tr>
                                    <tr>
                                        <td>Name</td>
                                        <td>@Model.FirstName @Model.LastName</td>
                                    </tr>
                                    <tr>
                                        <td>Email</td>
                                        <td><a href="https://mail.google.com/mail/?view=cm&fs=1&to=@Model.EmailAddress" target="_blank"> @Model.EmailAddress</a></td>
                                    </tr>
                                    <tr>
                                        <td>Contact Number</td>
                                        <td>@Model.ContactNumber</td>
                                    </tr>



                                    <tr>
                                        <td>Member Since</td>
                                        <td>@Model.DateAdded</td>
                                    </tr>

                                    <tr>
                                        <td>Specialty</td>
                                        <td>@Model.Specialty</td>
                                    </tr>
                                </tbody>
                            </table>

                            @if(Convert.ToInt32(Session["id"]) == @Model.InformationID)
                            {
                                <div class="form-group">
                                    
                                    <div class="text-center mbl"><button class="btn btn-default"><i class="fa fa-edit"></i>&nbsp;
                                        @Html.ActionLink("Edit Profile", "editProfile", "Profile", new { id = @Model.InformationID }, null)</button></div>

                               
                                </div>
                            }
                        </div>

                    </div>
         

                </div>
            </div>

}
}